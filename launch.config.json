{
  "launch": {
    "port": 9229,
    "console": "internalConsole",
    "excludes": [
      "node_modules/**",
      ".git/**",
      "**/.*/**"
    ],
    "groups": [
      {
        "id": "test",
        "name": "Tests",
        "includes": [
          "**/*.test.ts"
        ],
        "runtimeArgs": [
          "test",
          "-A"
        ]
      },
      {
        "id": "run",
        "name": "Runnable",
        "includes": [
          "**/*.run.ts"
        ],
        "runtimeArgs": [
          "run",
          "-A"
        ]
      }
    ]
  }
}

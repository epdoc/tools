{
  "name": "@epdoc/launchgen",
  "description": "Generate a launch.json file for use with VSCode",
  "version": "1.0.0-alpha.3",
  "author": {
    "name": "James Pravetz",
    "email": "jpravetz@epdoc.com"
  },
  "license": "MIT",
  "tasks": {
    "test": "deno test -RW",
    "check": "deno check main.ts src test",
    "install": "deno install -f --global --name launchgen -A --config deno.json ./main.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.15",
    "@std/expect": "jsr:@std/expect@^1.0.17",
    "@std/fmt": "jsr:@std/fmt@^1.0.8",
    "@std/fs": "jsr:@std/fs@^1.0.19",
    "@std/path": "jsr:@std/path@^1.1.2",
    "@epdoc/fs": "jsr:@epdoc/fs@^0.2.24",
    "@epdoc/type": "jsr:@epdoc/type@^1.1.17",
    "@std/testing": "jsr:@std/testing@^1.0.16"
  },
  "exports": {
    ".": "./main.ts"
  },
  "fmt": {
    "singleQuote": true,
    "lineWidth": 120
  },
  "test": {
    "include": [
      "test/*.test.ts"
    ],
    "exclude": [
      "test/.archive/**"
    ]
  }
}
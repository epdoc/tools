{
  "name": "@epdoc/bump",
  "version": "0.3.14",
  "description": "Bump semver version in local deno.json file",
  "author": {
    "name": "James Pravetz",
    "email": "jpravetz@epdoc.com"
  },
  "license": "MIT",
  "exports": {
    ".": "./main.ts"
  },
  "tasks": {
    "test": "deno test -RWS",
    "lint": "deno lint main.ts src test",
    "check": "deno check src main.ts test",
    "install": "deno install --global -A -f --config deno.json --name bump main.ts"
  },
  "tests": {
    "include": [
      "*.test.ts"
    ]
  },
  "imports": {
    "@epdoc/cliapp": "jsr:@epdoc/cliapp@^0.10.2",
    "@epdoc/fs": "jsr:@epdoc/fs@^0.2.17",
    "@epdoc/logger": "jsr:@epdoc/logger@^1002.4.6",
    "@epdoc/type": "jsr:@epdoc/type@^1.1.13",
    "@std/assert": "jsr:@std/assert@^1.0.14",
    "@std/datetime": "jsr:@std/datetime@^0.225.5",
    "@std/expect": "jsr:@std/expect@^1.0.17",
    "@std/testing": "jsr:@std/testing@^1.0.15",
    "commander": "npm:commander@^14.0.1",
    "semver": "npm:semver@^7.7.2"
  }
}
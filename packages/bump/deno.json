{
  "name": "@epdoc/bump",
  "version": "0.3.20",
  "description": "Bump semver version in local deno.json file",
  "author": {
    "name": "James Pravetz",
    "email": "jpravetz@epdoc.com"
  },
  "license": "MIT",
  "exports": {
    ".": "./main.ts"
  },
  "tasks": {
    "test": "deno test -RWSE --allow-run",
    "lint": "deno lint main.ts src test",
    "check": "deno check src main.ts test",
    "install": "deno install --global -A -f --config deno.json --name bump main.ts"
  },
  "tests": {
    "include": [
      "**/*.test.ts"
    ]
  },
  "imports": {
    "$bump": "./src/mod.ts",
    "@epdoc/cliapp": "jsr:@epdoc/cliapp@^1.0.0-beta.2",
    "@epdoc/fs": "jsr:@epdoc/fs@^1.0.0-alpha.8",
    "@epdoc/logger": "jsr:@epdoc/logger@^1003.0.0-beta.2",
    "@epdoc/msgbuilder": "jsr:@epdoc/msgbuilder@^0.0.1-beta.0",
    "@epdoc/type": "jsr:@epdoc/type@^1.1.17",
    "@std/assert": "jsr:@std/assert@^1.0.15",
    "@std/datetime": "jsr:@std/datetime@^0.225.5",
    "@std/expect": "jsr:@std/expect@^1.0.17",
    "@std/testing": "jsr:@std/testing@^1.0.16",
    "commander": "npm:commander@^14.0.1",
    "semver": "npm:semver@^7.7.3"
  }
}